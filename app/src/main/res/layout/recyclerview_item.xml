<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        app:cardMaxElevation="2dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:circularflow_radiusInDP="8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".ui.home.HomeFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="247dp">

            <ImageView
                android:id="@+id/ivThingToDo"
                android:layout_width="122dp"
                android:layout_height="89dp"
                android:layout_marginStart="6dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/friends_hanging_out_stock_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvThingToDoTitle"
                android:layout_width="114dp"
                android:layout_height="30dp"
                android:layout_marginStart="6dp"
                android:layout_marginTop="4dp"
                android:text="Hanging out"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/ivThingToDo"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvThingToDoDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="16dp"
                android:text="Hanging out with friends"
                app:layout_constraintStart_toEndOf="@+id/ivThingToDo"
                app:layout_constraintTop_toBottomOf="@+id/tvThingToDoTitle" />

            <TextView
                android:id="@+id/tvThingToDoTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:text="Time: 7 PM tonight"
                app:layout_constraintStart_toEndOf="@+id/ivThingToDo"
                app:layout_constraintTop_toBottomOf="@+id/tvThingToDoDescription" />

            <TextView
                android:id="@+id/tvThingToDoDistanceFromUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="20dp"
                android:text="Location: 5 miles away"
                app:layout_constraintStart_toEndOf="@+id/ivThingToDo"
                app:layout_constraintTop_toBottomOf="@+id/tvThingToDoTime" />

            <TextView
                android:id="@+id/tvPeopleGoingToThingToDo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="132dp"
                android:layout_marginTop="20dp"
                android:text="People going: 2 friends, 1 other"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvThingToDoDistanceFromUser" />

            <Button
                android:id="@+id/btnGoToThingToDo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="200dp"
                android:text="GO"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="0dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>